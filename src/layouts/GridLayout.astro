---
import { twMerge } from "tailwind-merge";
interface Props {
  pageTitle?: string;
  class?: string;
}

const { pageTitle, class: classes } = Astro.props;

import Logo from "@components/Logo.astro";
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";

import Layout from "@layouts/Layout.astro";
---

<Layout
  {pageTitle}
  class={twMerge(
    "desktop:grid-areas-desktop-work grid-areas-mobile-work",
    classes
  )}
>
  <Logo class="grid-in-logo" />
  <Navigation class="grid-in-nav" />
  <slot />
  <Footer hideMarkOnDesktop={false} hideMarkOnMobile={false} />
</Layout>
