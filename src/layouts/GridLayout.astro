---
import { twMerge } from "tailwind-merge";
interface Props {
  pageTitle?: string;
  class?: string;
}

const { pageTitle, class: className } = Astro.props;

import Logo from "@components/Logo.astro";
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";

import Layout from "@layouts/Layout.astro";
---

<Layout
  {pageTitle}
  class={twMerge(
    "grid-areas-desktop-work mobile:grid-areas-mobile-work",
    className
  )}
>
  <Logo class="grid-in-logo" />
  <Navigation class="grid-in-nav" />
  <slot />
  <Footer class="grid-in-footer" />
</Layout>
