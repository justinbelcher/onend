---
import "@styles/global.css";

import { twMerge } from "tailwind-merge";
import { AstroFont } from "astro-font";

import {
  THEME_COLOR,
  SITE_DESCRIPTION,
  SITE_TITLE,
  SOCIAL_IMAGE,
} from "src/constants";

interface Props {
  pageTitle?: string;
  class?: string;
}
const { pageTitle, class: className = "grid-area-desktop" } = Astro.props;
const title = pageTitle ? `${pageTitle} | ${SITE_TITLE}` : SITE_TITLE;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content={THEME_COLOR} />
    <meta name="description" content={SITE_DESCRIPTION.long} />
    <meta property="og:title" content="On End Studio" />
    <meta property="og:description" content={SITE_DESCRIPTION.short} />
    <meta property="og:image" content={SOCIAL_IMAGE} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
     <AstroFont
      config={[
        {
          src: [],
          name: "JetBrains Mono",
          googleFontsURL: "https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "monospace",
        },
      ]}
    />
  </head>
  <body class="text-stone-900 bg-stone-200 p-6 mobile:p-4">
    <main
      class={twMerge(
        "grid gap-6 grid-cols-14 grid-rows-desktop mobile:grid-cols-5 mobile:grid-rows-mobile",
        className
      )}
    >
      <slot />
    </main>
  </body>
</html>
