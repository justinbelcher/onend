---
interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;

import Logo from "@components/Logo.astro";
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";

import Layout from "@layouts/Layout.astro";
---

<Layout {pageTitle} class="grid-areas-desktop mobile:grid-areas-mobile">
  <Logo class="grid-in-logo" />
  <Navigation class="grid-in-nav" />
  <slot name="content" />
  <slot name="hero" />
  <Footer
    class="grid-in-footer"
    hideMarkOnDesktop={true}
    hideMarkOnMobile={false}
  />
</Layout>
